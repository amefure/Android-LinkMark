<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ex_light_gray">

    <LinearLayout
        android:id="@+id/backgroundLeftButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@color/ex_positive"
            android:contentDescription="@null"
            android:src="@drawable/button_edit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/backgroundRightButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@color/ex_negative"
            android:contentDescription="@null"
            android:src="@drawable/button_delete" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>